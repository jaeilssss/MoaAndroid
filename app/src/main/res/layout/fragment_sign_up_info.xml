<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.signup.SignUpInfoFragment"
    >
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.signup.SignUpInfoViewModel"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scv"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/back"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ic_back" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="본인 인증"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textColor="@color/moaBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18dp"
            android:includeFontPadding="false"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintBottom_toBottomOf="@id/back"
            android:id="@+id/userInfoTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52.3dp"
            android:text="이름"
            android:layout_marginStart="15dp"
            android:textColor="@color/moaBlack"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/userInfoTextView"
            android:textSize="14dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:id="@+id/userInfoNameTextView"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/login_edit_text_radius_15"
            app:layout_constraintTop_toBottomOf="@id/userInfoNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="이름"
            android:maxLength="7"
            android:includeFontPadding="false"
            android:text="@={model.name}"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:padding="10dp"
            android:textSize="16dp"
            android:id="@+id/userInfoEditName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주민등록번호"
        android:fontFamily="@font/notosanscjkkr_medium"
        app:layout_constraintTop_toBottomOf="@id/userInfoEditName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginStart="15dp"
        android:includeFontPadding="false"
        android:textColor="@color/moaBlack"
        android:id="@+id/userInfoPrivateCodeTextView"/>

        <EditText
            android:id="@+id/privateFrontEdit"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/login_edit_text_radius_15"
            android:hint="앞자리"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:maxLines="1"
            android:maxLength="6"
            android:padding="10dp"
            android:inputType="number"
            android:textSize="16dp"
            android:text="@={model.birthDay}"
            app:layout_constraintEnd_toEndOf="@id/horizontalBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userInfoPrivateCodeTextView" />

        <ImageView
            android:id="@+id/horizontalBar"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/horizontal_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userInfoPrivateCodeTextView" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/horizontalBar"
            app:layout_constraintEnd_toStartOf="@id/privateCode"
            app:layout_constraintTop_toBottomOf="@id/userInfoPrivateCodeTextView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edit_text_radius_15"
            android:hint="성별"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:inputType="numberDecimal"
            android:text="@={model.gender}"
            android:maxLength="1"
            android:id="@+id/privateBackEdit"
            android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="******"
        android:textSize="16dp"
        android:includeFontPadding="false"
        android:id="@+id/privateCode"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/notosanscjkkr_medium"
        app:layout_constraintStart_toEndOf="@id/privateBackEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userInfoPrivateCodeTextView"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="닉네임 설정"
            android:fontFamily="@font/notosanscjkkr_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/privateFrontEdit"
            android:layout_marginStart="15dp"
            android:includeFontPadding="false"
            android:layout_marginTop="22dp"
            android:textColor="@color/moaBlack"
            android:id="@+id/userNickNameText"/>

        <EditText
            android:id="@+id/userNickNameEdit"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/login_edit_text_radius_15"
            android:hint="닉네임 입력"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:padding="10dp"
            android:text="@={model.nickName}"
            android:maxLength="15"
            app:layout_constraintEnd_toStartOf="@id/nicknameCheckBtn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/userNickNameText" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:id="@+id/nicknameCheckBtn"
            android:background="@drawable/button_shape_black_radius_15"
            app:layout_constraintDimensionRatio="W,2:1"
            android:text="중복확인"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:layout_marginEnd="15dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/userNickNameEdit"
            app:layout_constraintTop_toBottomOf="@id/userNickNameText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNickNameEdit"
            android:text="아파트 인증"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/moaBlack"
            android:textSize="14dp"
            android:id="@+id/apartCertificationText"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/apartCertificationText"
            android:background="@drawable/login_edit_text_radius_15"
            android:id="@+id/apartCertificationButton"
            android:layout_marginTop="10dp"
            android:hint="아파트를 선택해주세요"
            android:text="@={model.aptName}"
            android:paddingStart="15dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apartCertificationButton"
            android:background="@drawable/login_edit_text_radius_15"
            android:hint="동"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            android:text="@={model.dong}"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toStartOf="@+id/apartHosooEdit"
            android:id="@+id/apartDongEdit"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apartCertificationButton"
            android:background="@drawable/login_edit_text_radius_15"
            app:layout_constraintStart_toEndOf="@id/apartDongEdit"
            android:id="@+id/apartHosooEdit"
            android:includeFontPadding="false"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:paddingStart="15dp"
            android:inputType="numberDecimal"
            android:text="@={model.hosoo}"
            android:hint="호"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_shape_main_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apartDongEdit"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4.5dp"
                android:fontFamily="@font/notosanscjkkr_medium"
            android:text="다음"
            android:id="@+id/next"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

<androidx.core.widget.ContentLoadingProgressBar
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/signUpLoadingProgressBar"
    style="?android:progressBarStyleLarge"
    android:indeterminateTint="@color/mainColor"
    android:visibility="gone"
    />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>