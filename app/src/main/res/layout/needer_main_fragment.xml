<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.concierge.needer.NeederMainFragment">
    
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.concierge.needer.NeederMainViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="9.8dp"
                android:layout_height="17dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_back"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도움 요청"
                android:textColor="@color/moaBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintTop_toTopOf="@id/back"
                app:layout_constraintBottom_toBottomOf="@id/back"
                android:id="@+id/currentViewText"/>

            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,2:1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/currentViewText"
                android:layout_marginTop="15dp"
                android:id="@+id/NeederMainBanner"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/NeederMainIndicators"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/NeederMainBanner"
                android:padding="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="육아"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainIndicators"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineSpacingExtra="-5.3sp"
                android:textColor="@color/moaBlack"
                android:id="@+id/NeederMainKidText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainIndicators"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:lineSpacingExtra="-3.3sp"
                android:id="@+id/NeederMainKidAllBtn"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainKidText"
                android:id="@+id/NeederMainKidRcv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교육"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainKidRcv"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textColor="@color/moaBlack"
                android:lineSpacingExtra="-5.3sp"
                android:id="@+id/NeederMainEducationText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainKidRcv"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:lineSpacingExtra="-3.3sp"
                android:id="@+id/NeederMainEduAllBtn"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/NeederMainEducationText"
                android:id="@+id/NeederMainEducationRcv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인테리어"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainEducationRcv"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textColor="@color/moaBlack"
                android:lineSpacingExtra="-5.3sp"
                android:id="@+id/NeederMaininteriorText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainEducationRcv"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:lineSpacingExtra="-3.3sp"
                android:id="@+id/NeederMaininteriorAllBtn"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/NeederMaininteriorText"
                android:id="@+id/NeederMainInteriorRcv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반려동물"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainInteriorRcv"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textColor="@color/moaBlack"
                android:lineSpacingExtra="-5.3sp"
                android:id="@+id/NeederMainPetText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainInteriorRcv"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:lineSpacingExtra="-3.3sp"
                android:id="@+id/NeederMainPetAllBtn"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/NeederMainPetText"
                android:id="@+id/NeederMainpetRcv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빌려주세요"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainpetRcv"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textColor="@color/moaBlack"
                android:lineSpacingExtra="-5.3sp"
                android:id="@+id/NeederMainBorrowText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainpetRcv"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:lineSpacingExtra="-3.3sp"
                android:id="@+id/NeederMainBorrowAllBtn"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/NeederMainBorrowText"
                android:id="@+id/NeederMainBorrowRcv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="품앗이"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainBorrowRcv"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textColor="@color/moaBlack"
                android:lineSpacingExtra="-5.3sp"
                android:id="@+id/NeederMainSharingText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainBorrowRcv"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:lineSpacingExtra="-3.3sp"
                android:id="@+id/NeederMainSharingAllBtn"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/NeederMainSharingText"
                android:id="@+id/NeederMainSharingRcv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainSharingRcv"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textColor="@color/moaBlack"
                android:lineSpacingExtra="-5.3sp"
                android:id="@+id/NeederMainEtcText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:fontFamily="@font/notosanscjkkr_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NeederMainSharingRcv"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:lineSpacingExtra="-3.3sp"
                android:id="@+id/NeederMainEtcAllBtn"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/NeederMainEtcText"
                android:id="@+id/NeederMainEtcRcv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>