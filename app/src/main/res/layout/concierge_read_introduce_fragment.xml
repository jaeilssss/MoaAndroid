<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.concierge.helper.ConciergeReadIntroduceViewModel" />
    </data>
<!--    <androidx.core.widget.NestedScrollView-->
<!--            android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:fillViewport="true"-->
<!--        >-->
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.concierge.helper.ConciergeReadIntroduceFragment">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="신청내용"
    android:layout_marginTop="15dp"
    android:fontFamily="@font/notosanscjkkr_medium"
    android:layout_marginStart="15dp"
    android:textSize="14dp"
    android:textColor="#777777"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:includeFontPadding="false"
    android:id="@+id/ConciergeReadContentText"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16dp"
        android:lineSpacingExtra="9dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ConciergeReadContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ConciergeReadContentText"
        android:textColor="@color/moaBlack"
        android:layout_marginEnd="15dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:paddingStart="15dp"
        android:text="@={model.content}"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/ConciergeReadContent"
        android:text="이웃정보"
        android:includeFontPadding="false"
        android:textSize="14dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:textColor="#777777"
        android:layout_marginTop="15dp"
        android:id="@+id/ConciergeReadAptNameText"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ConciergeReadAptNameText"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="@={model.aptName}"
        android:includeFontPadding="false"
        android:textSize="16dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:textColor="@color/moaBlack"
        android:lineSpacingExtra="9dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ConciergeReadIntroduceAptName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ConciergeReadIntroduceAptName"
        android:text="희망 시급"
        android:textSize="14dp"
        android:textColor="#777777"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:layout_marginStart="15dp"
        android:id="@+id/ConciergeReadHopeWageText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ConciergeReadHopeWageText"
        android:textColor="@color/moaBlack"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:textSize="20dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:text="@={model.hopeWage}"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/ConciergeReadHopeWage"/>
<View
    android:layout_width="0dp"
    android:layout_height="80dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ConciergeReadHopeWage"
    app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
<!--    </androidx.core.widget.NestedScrollView>-->
</layout>