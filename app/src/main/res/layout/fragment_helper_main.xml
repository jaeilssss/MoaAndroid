<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.concierge.helper.HelperMainViewModel" />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/back"
            android:layout_width="9.8dp"
            android:layout_height="17dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_back"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재능 공유"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textColor="@color/moaBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintBottom_toBottomOf="@id/back"
            android:id="@+id/currentViewText"/>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,2:1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/currentViewText"
            android:layout_marginTop="15dp"
            android:id="@+id/HelperMainBanner"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/HelperMainIndicators"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/HelperMainBanner"
            android:padding="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="육아"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HelperMainIndicators"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:lineSpacingExtra="-5.3sp"
        android:textColor="@color/moaBlack"
        android:id="@+id/HelperMainKidText"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체보기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/HelperMainKidText"
            app:layout_constraintBottom_toBottomOf="@id/HelperMainKidText"
            android:layout_marginEnd="15dp"
            android:textSize="15sp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:lineSpacingExtra="-3.3sp"
            android:id="@+id/HelperMainKidAllBtn"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/HelperMainKidText"
            android:id="@+id/HelperMainKidRcv"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교육"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/HelperMainKidRcv"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:layout_marginStart="15dp"
            android:textColor="@color/moaBlack"
            android:lineSpacingExtra="-5.3sp"
            android:id="@+id/HelperMainEducationText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체보기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/HelperMainEducationText"
            app:layout_constraintTop_toTopOf="@id/HelperMainEducationText"
            android:layout_marginEnd="15dp"
            android:textSize="15sp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:lineSpacingExtra="-3.3sp"
            android:id="@+id/HelperMainEduAllBtn"/>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="0dp"
    android:layout_height="180dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintTop_toBottomOf="@id/HelperMainEducationText"
    android:id="@+id/HelperMainEducationRcv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인테리어"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/HelperMainEducationRcv"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:layout_marginStart="15dp"
            android:textColor="@color/moaBlack"
            android:lineSpacingExtra="-5.3sp"
            android:id="@+id/HelperMaininteriorText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체보기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/HelperMaininteriorText"
            app:layout_constraintBottom_toBottomOf="@id/HelperMaininteriorText"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textSize="15sp"
            android:lineSpacingExtra="-3.3sp"
            android:id="@+id/HelperMaininteriorAllBtn"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/HelperMaininteriorText"
            android:id="@+id/HelperMainInteriorRcv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려동물"
            android:fontFamily="@font/notosanscjkkr_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/HelperMainInteriorRcv"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textColor="@color/moaBlack"
            android:lineSpacingExtra="-5.3sp"
            android:id="@+id/HelperMainPetText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체보기"
            android:fontFamily="@font/notosanscjkkr_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/HelperMainPetText"
            app:layout_constraintTop_toTopOf="@id/HelperMainPetText"
            android:layout_marginEnd="15dp"
            android:textSize="15sp"
            android:lineSpacingExtra="-3.3sp"
            android:id="@+id/HelperMainPetAllBtn"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/HelperMainPetText"
            android:id="@+id/HelperMainpetRcv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타"
            android:fontFamily="@font/notosanscjkkr_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/HelperMainpetRcv"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textColor="@color/moaBlack"
            android:lineSpacingExtra="-5.3sp"
            android:id="@+id/HelperMainEtcText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체보기"
            android:fontFamily="@font/notosanscjkkr_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/HelperMainEtcText"
            app:layout_constraintBottom_toBottomOf="@id/HelperMainEtcText"
            android:layout_marginEnd="15dp"
            android:textSize="15sp"
            android:lineSpacingExtra="-3.3sp"
            android:id="@+id/HelperMainEtcAllBtn"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/HelperMainEtcText"
            android:id="@+id/HelperMainEtcRcv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>