<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="model"
            type="com.moa.moakotlin.ui.concierge.helper.HelperWriteViewModel" />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.concierge.helper.HelperWriteFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_width="9.8dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_back"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/moaBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        android:text="도움 요청 글쓰기"
        android:id="@+id/HelperWriteText"
        android:gravity="center_vertical"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글쓰기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HelperWriteText"
        android:layout_marginTop="50dp"
        android:textColor="@color/moaBlack"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:id="@+id/HelperWriteTitleText"
        android:lineSpacingExtra="8.5sp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/HelperWriteTitleText"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_grey_radius_10"
        android:hint="제목을 써주세요"
        android:id="@+id/HelperWriteTitleEdit"
        android:paddingStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HelperWriteTitleEdit"
        android:text="당신의 전문 분야"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/moaBlack"
        android:textSize="14sp"
        android:lineSpacingExtra="8.5sp"
        android:id="@+id/HelperWriteCategoryText"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/HelperWriteCategoryText"
        android:layout_marginTop="10dp"
        android:id="@+id/HelperWriteCategoryLayout"
        android:background="@drawable/shape_grey_radius_10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="당신의 전문 분야를 선택해주세요"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:id="@+id/NeederWriteCategory"
            android:textSize="16sp"
            android:paddingStart="10dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="37dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            android:background="@drawable/ic_right_arrow"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="희망 시급"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HelperWriteCategoryLayout"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/moaBlack"
        android:textSize="14sp"
        android:id="@+id/HelperWriteHopeWageText"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="협의가능"
        android:textSize="14sp"
        android:button="@drawable/selector_signup_policy_checkbox"
        android:textColor="#777777"
        app:layout_constraintTop_toTopOf="@id/HelperWriteHopeWageText"
        app:layout_constraintBottom_toBottomOf="@id/HelperWriteHopeWageText"
        android:layout_marginEnd="15dp"
        android:id="@+id/HelperWriteIsNegoCheckBox"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_grey_radius_10"
        app:layout_constraintTop_toBottomOf="@id/HelperWriteHopeWageText"
        android:hint="희망시급"
        android:id="@+id/HelperWriteHopeWageEdit"/>

<!--    여기서 부터 시작 해야 함 !-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/HelperWriteHopeWageEdit"
        app:layout_constraintStart_toStartOf="parent"
        android:text="희망 날짜"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</layout>