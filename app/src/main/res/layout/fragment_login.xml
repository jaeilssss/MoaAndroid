<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.login.LoginFragment">
 <data>
  <variable
      name="model"
      type="com.moa.moakotlin.ui.login.LoginViewModel" />

 </data>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="#ffffff"
     android:orientation="vertical"
     >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_gravity="left"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/moatempimage" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모두의 아파트, MoA"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#000000"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="따듯한 아파트를 만드는 MOA입니다"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입주민분들께서는 이용을 위해 로그인 해주세요."
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#808080"
        android:textSize="13dp" />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2"
       android:orientation="vertical">
    <EditText
        android:id="@+id/edit_id"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@={model.phoneNumber}"
        android:textColor="#000000"
        android:inputType="number"
        android:backgroundTint ="#BDBDBD"
        android:textColorHint="#BDBDBD"
        android:hint="핸드폰 번호 입력"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="비밀번호 찾기"
         android:textColor="#000000"
         android:layout_marginRight="20dp"
         android:layout_gravity="center_horizontal"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text=" | "
         android:textColor="#000000"
         android:layout_gravity="center_horizontal"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="회원가입하기"
         android:onClick="@{()->model.goToSignUp()}"
         android:textColor="#000000"
         android:layout_marginLeft="20dp"
         android:layout_gravity="center_horizontal"/>
    </LinearLayout>

   </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
   <Button
       android:id="@+id/login_button"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="로그인"
       android:textSize="18dp"
       android:layout_gravity="bottom"
       android:textColor="#000000"
       android:background="#FFE400"

       />
  </LinearLayout>

 </LinearLayout>


</layout>