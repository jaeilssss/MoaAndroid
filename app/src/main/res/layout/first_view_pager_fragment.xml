<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.firstview.FirstViewPagerFragment">
<data>
    <variable
        name="model"
        type="com.moa.moakotlin.ui.firstview.FirstViewPagerViewModel" />
</data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/firstViewMessage"
            android:textColor="@color/moaBlack"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginTop="70dp"/>
        <ImageView
            android:layout_width="328.8dp"
            android:layout_height="346.2dp"
            android:background="@drawable/img_first_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/firstviewFragmentImg"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstviewFragmentImg"
            android:text="아파트 라이프 스타일 플랫폼"
            android:textColor="@color/moaBlack"
            android:textSize="19dp"
            android:textStyle="bold"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:id="@+id/firstViewBottomMessage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="모두의 아파트"
            android:fontFamily="@font/notosanscjkkr_medium"
            app:layout_constraintTop_toBottomOf="@id/firstViewBottomMessage"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:textSize="19dp"
            android:includeFontPadding="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>