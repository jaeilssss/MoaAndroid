<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".LoadingActivity">
<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/loadingTextView"
    android:id="@+id/loadingImage"
    app:layout_constraintVertical_chainStyle="packed"
    android:background="@drawable/ic_loading_logo"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/loadingMessage"
    android:fontFamily="@font/notosanscjkkr_medium"
    android:textSize="17dp"
    android:textColor="@color/moaBlack"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/loadingImage"
    app:layout_constraintBottom_toBottomOf="parent"
    android:gravity="center"
    android:id="@+id/loadingTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>