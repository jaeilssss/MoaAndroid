<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.firstview.thirdViewPagerFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ThirdViewPagerImg"
        android:text="@string/thirdViewMessage"
        app:layout_constraintVertical_bias="0.7"
        android:gravity="center"
        android:textColor="@color/moaBlack"
        android:textSize="19dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="328.8dp"
        android:layout_height="346.2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/img_third_view"
        android:id="@+id/ThirdViewPagerImg"
        />
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/ThirdViewPagerImg"
    android:text="모두의 아파트, 모아"
    android:textColor="@color/mainColor"
    android:textStyle="bold"
    android:fontFamily="@font/notosanscjkkr_medium"
    android:includeFontPadding="false"
    android:layout_marginTop="30dp"
    android:textSize="19dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>


</layout>