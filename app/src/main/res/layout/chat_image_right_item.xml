<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="2021년 08월 22일"
        android:gravity="center"
        android:textSize="14dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:id="@+id/itemChatDate"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp" />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:maxWidth="200dp"
        android:foregroundGravity="right"
        android:scaleType="fitXY"
        android:id="@+id/itemChatRightImg"/>

    <TextView
        android:id="@+id/itemChatRightImgDate"
        android:layout_width="43dp"
        android:layout_height="9dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:text="오후 2:11"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/itemChatRightImg"
        app:layout_constraintEnd_toStartOf="@id/itemChatRightImg" />
    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemChatRightImgDate"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
