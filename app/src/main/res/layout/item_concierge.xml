<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="252dp"
        android:layout_height="170dp"
        android:background="@drawable/shape_grey_radius_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/itemConciergeLayout"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_radius_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:id="@+id/itemConciergeImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/itemConciergeImage"
            app:layout_constraintTop_toTopOf="@id/itemConciergeImage"
            android:text="모집중"
            android:textSize="11dp"
            android:padding="3dp"
            android:gravity="center"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:background="@drawable/shape_moa_black_radius_5_border_white"
            android:id="@+id/itemConciergeHireStatus"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="만현마을 쌍용1차"
            android:fontFamily="@font/notosanscjkkr_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemConciergeImage"
            app:layout_constraintTop_toTopOf="@id/itemConciergeImage"
            app:layout_constraintBottom_toTopOf="@id/itemConciergeDate"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="10dp"
            android:textSize="13dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:gravity="bottom"
            android:ellipsize="end"
            android:textColor="@color/moaBlack"
            android:textStyle="bold"
            android:id="@+id/itemConciergeAptName"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="파이리123"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:id="@+id/itemConciergeDate"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="#2c2c2c"
            android:gravity="bottom"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/itemConciergeImage"
            app:layout_constraintTop_toBottomOf="@id/itemConciergeAptName"
            app:layout_constraintBottom_toBottomOf="@id/itemConciergeImage"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/itemConciergeImage"
            android:gravity="bottom"
            android:text="등하교 도우미가 필요합니다 ㅠㅠ"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:id="@+id/itemConciergeTitle"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_won_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemConciergeTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"
            android:scaleType="fitXY"
            android:id="@+id/itemConciergeWonSign"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/itemConciergeWonSign"
            app:layout_constraintTop_toTopOf="@id/itemConciergeWonSign"
            app:layout_constraintBottom_toBottomOf="@id/itemConciergeWonSign"
            android:text="20,000"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:textSize="18dp"
            android:textColor="@color/moaBlack"
            android:layout_marginStart="5dp"
            android:id="@+id/itemConciergeHopeWage"/>

        <TextView
            android:layout_width="54dp"
            android:layout_height="20dp"
            android:background="@drawable/button_shape_main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/itemConciergeHopeWage"
            app:layout_constraintBottom_toBottomOf="@id/itemConciergeHopeWage"
            android:text="협의가능"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textColor="@color/moaBlack"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:includeFontPadding="false"
            android:textSize="10dp"
            android:id="@+id/itemConciergeNego"
 />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>