<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.imagepicker.ImagePickerActivity">
    <ImageButton
        android:id="@+id/imagePickerBack"
        android:layout_width="11.8dp"
        android:layout_height="19dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_back"
        android:textStyle="bold"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/moaBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/imagePickerBack"
        app:layout_constraintBottom_toBottomOf="@id/imagePickerBack"
        android:text="이미지 선택"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:id="@+id/ActivityImagePickerText"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ActivityImagePickerText"
        app:layout_constraintBottom_toBottomOf="@id/ActivityImagePickerText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:text="완료"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:textSize="18sp"
        android:textColor="@color/moaBlack"
        android:id="@+id/ActivityImagePickerSubmit"/>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ActivityImagePickerText"
        android:id="@+id/ActivityImagePickerFragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>