<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.AptSearchFragment">

<ImageView
    android:layout_width="9.8dp"
    android:layout_height="17dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="28dp"
    android:background="@drawable/ic_back_btn"
    android:id="@+id/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8.8sp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/aptSearchText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="우리 아파트 검색" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/aptSearchLayout"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/aptSearchText"
        android:background="@drawable/login_edit_text_radius_15">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/searchIcon"/>
<EditText
    android:layout_width="0dp"
    android:layout_height="55dp"
    app:layout_constraintStart_toEndOf="@id/searchIcon"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@drawable/login_edit_text_radius_15"
    app:layout_constraintTop_toTopOf="parent"
    android:hint="아파트를 입력해주세요"
    android:paddingStart="10dp"
    android:id="@+id/aptSearchEdit"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    리사이클러뷰 높이는 좀더 고민 해볼것!-->

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H ,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aptSearchLayout"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_apt"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nextBtn"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="우리 아파트 추가 요청하기"
        android:textSize="18sp"

        android:textColor="#ffffff"
        android:lineSpacingExtra="4.5sp"
        android:gravity="center_horizontal"
        android:id="@+id/claimMyAptBtn"
        android:background="@drawable/button_shape_black_radius_15"/>
<Button
    android:layout_width="0dp"
    android:layout_height="55dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/button_shape_main_color"
    android:layout_marginBottom="60dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:text="다음"
    android:textSize="18sp"
    android:textColor="#000000"
    android:lineSpacingExtra="4.5sp"
    android:id="@+id/nextBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>