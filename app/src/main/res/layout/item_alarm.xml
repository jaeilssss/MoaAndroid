<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="#bdbdbd"
        android:id="@+id/itemAlarmProfileImg"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/itemAlarmProfileImg"
        app:layout_constraintBottom_toTopOf="@id/itemAlarmDate"
        app:layout_constraintStart_toEndOf="@id/itemAlarmProfileImg"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="뉴냐리님이 채팅 메시지를 보냈어요"
        android:textSize="14dp"

        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/moaBlack"
        android:ellipsize="end"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/itemAlarmTitle"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/itemAlarmDate"
        android:layout_marginTop="5dp"
        android:textColor="@color/moaBlack"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/itemAlarmTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemAlarmTitle"
        app:layout_constraintBottom_toBottomOf="@id/itemAlarmProfileImg"
        android:textSize="14dp"
        android:text="2012/221/11"
        />




</androidx.constraintlayout.widget.ConstraintLayout>