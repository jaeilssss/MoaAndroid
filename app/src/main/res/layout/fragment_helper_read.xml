<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.concierge.helper.HelperReadFragment">

    <data>

        <variable
            name="model"
            type="com.moa.moakotlin.ui.concierge.helper.HelperReadViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/sitter_read_layout"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="?attr/actionModeCloseDrawable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->model.prev()}"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:drawable/ic_menu_info_details"
            android:layout_margin="10dp"
            android:id="@+id/option"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sitter_read_layout"
        android:id="@+id/viewpager"/>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="@id/viewpager"
        app:tabBackground="@drawable/dot_indicator"
        app:tabGravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewpager"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:id="@+id/nickname_text"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/viewpager"
        android:text=":"
        app:layout_constraintStart_toEndOf="@id/nickname_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:id="@+id/nickname_txt2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/nickname_txt2"
        app:layout_constraintTop_toBottomOf="@id/viewpager"
       android:layout_marginTop="20dp"
        android:textColor="#000000"
        tools:text="레이나"
        android:text="@={model.nickname}"
        android:layout_marginLeft="10dp"
        android:id="@+id/nickname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동중"
        app:layout_constraintStart_toEndOf="@id/nickname"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewpager"
        android:id="@+id/status"
        android:textSize="20sp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status"
        android:background="#bdbdbd"
        android:id="@+id/sitter_read_line"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맘시터 유형"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sitter_read_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:id="@+id/sitter_read_type_txt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_category"
        tools:text="대학생"
        android:textSize="17sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/sitter_read_type_txt"
        app:layout_constraintTop_toBottomOf="@id/sitter_read_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/main_category"
    android:text="이웃정보"
    android:textColor="#000000"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:textSize="15sp"
    android:id="@+id/info"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info"
        tools:text="수지센트럴 아이파크"
        android:id="@+id/sitter_read_info"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
<View
    android:layout_width="0dp"
    android:layout_height="2dp"
    android:background="#bdbdbd"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/sitter_read_info"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sitter_read_info"
        android:id="@+id/content"
        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#ff7f00"
            android:id="@+id/chat_layout"
            android:layout_height="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="희망시급"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/hope_wage_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="협의가능"
                app:layout_constraintStart_toEndOf="@id/hope_wage_text"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:id="@+id/is_nego_text"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/wage"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="10000원"
                app:layout_constraintTop_toBottomOf="@id/hope_wage_text"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이웃과 채팅하기"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#ff7f00"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/chatting_btn"
                android:background="@drawable/sign_up_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>