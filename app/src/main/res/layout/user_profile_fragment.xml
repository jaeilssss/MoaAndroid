<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.mypage.UserProfileViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5E00"
    tools:context=".ui.mypage.UserProfileFragment">

<!--    <de.hdodenhof.circleimageview.CircleImageView-->
<!--        android:layout_width="80dp"-->
<!--        android:layout_height="80dp"-->
<!--        android:src="@drawable/profile_human"-->
<!--        tools:layout_editor_absoluteX="165dp"-->
<!--        tools:layout_editor_absoluteY="16dp" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="60dp"
    android:id="@+id/user_profile_layout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/user_profile_layout_shape"
    >
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/login_button_shape"
            android:text="프로필수정"
            android:id="@+id/user_profile_modify"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_human"
        tools:layout_editor_absoluteX="154dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="parent"
        android:id="@+id/user_profile_image"
        tools:layout_editor_absoluteY="9dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="뉴나리"
        app:layout_constraintTop_toBottomOf="@id/user_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/user_profile_nick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_nick"
        tools:text="만현마을 쌍용1차"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:id="@+id/user_profile_apt_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_profile_apt_name"
        tools:text="인증"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/user_profile_nick"
        android:layout_marginLeft="10dp"/>
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/user_profile_apt_name"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:minHeight="50dp"
    android:background="@drawable/edit_text_shape"
    tools:text="이웃 주민과 정보 공유하며 \n 커피 친구를 사귀고픈 6세 아들맘이에요 ! :)"
    android:id="@+id/user_profile_my_self"
    android:layout_marginTop="20dp"
    android:textColor="#000000"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_my_self"
        android:layout_marginTop="15dp"
        android:background="#bdbdbd"
        android:id="@+id/user_profile_line"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/user_profile_review_layout"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_profile_line">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="이웃들의 남긴 후기"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/user_profile_review_rcv"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/user_profile_review_layout"
    android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/user_profile_chatting_layout"
        android:layout_height="100dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="채팅하기"
            android:textSize="30sp"/>
    </LinearLayout>
</LinearLayout>

</layout>