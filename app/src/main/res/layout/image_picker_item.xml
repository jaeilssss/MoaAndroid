<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_picker_layout"

        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:backgroundTint="#ffffff"
            android:scaleType="fitXY"
            android:id="@+id/image_picker_item"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/image_check_box_button"
            android:gravity="center"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:textColor="@color/moaBlack"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:textStyle="bold"
            android:layout_alignRight="@+id/image_picker_item"
            android:background="@drawable/image_not_check_image"/>
    </RelativeLayout>

</LinearLayout>