<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="101dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_grey_radius_15"
        android:layout_marginTop="10dp"
        android:id="@+id/itemClaimLayout">

        <ImageView
            android:id="@+id/itemClaimImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.645"
            tools:src="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/itemClaimImage"
            app:layout_constraintTop_toTopOf="@id/itemClaimImage"
            tools:text="하자/민원"
            android:background="@drawable/shape_main_color_radius_5"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textColor="@color/moaBlack"
            android:padding="5dp"
            android:textSize="13dp"
            android:layout_marginStart="15dp"
            android:id="@+id/itemClaimCategory"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/itemClaimImage"
            app:layout_constraintEnd_toStartOf="@id/claimReadLock"
            app:layout_constraintTop_toBottomOf="@id/itemClaimCategory"
            tools:text="102동 앞에 주차 단속 부탁드립니다"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textColor="@color/moaBlack"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:id="@+id/itemClaimTitle"/>

        <ImageView
            android:id="@+id/claimReadLock"
            android:layout_width="14dp"
            android:layout_height="17dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/img_lock"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/itemClaimTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/itemClaimTitle"
            app:layout_constraintTop_toTopOf="@id/itemClaimTitle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/itemClaimImage"
            app:layout_constraintTop_toBottomOf="@id/itemClaimTitle"
            android:layout_marginStart="15dp"
            tools:text="닉네임"
            android:layout_marginTop="5dp"
            android:textSize="13dp"

            android:textColor="@color/moaBlack"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:id="@+id/itemClaimNickName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/itemClaimNickName"
            app:layout_constraintBottom_toBottomOf="@id/itemClaimNickName"
            android:background="@drawable/shape_moa_black_radius_5"
            android:textColor="@color/white"
            tools:text="요청중"
            android:textSize="13dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:id="@+id/itemClaimStatus"
            android:layout_marginEnd="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>