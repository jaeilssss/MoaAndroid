<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.home.HomeViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/MainText"
    android:layout_marginTop="10dp"
    android:background="@drawable/home_main_img"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MainText"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:id="@+id/userAddressLayout"
        android:background="@drawable/shape_white_radius_15dp"
        >
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_compass"
        android:layout_marginTop="7.5dp"
        android:layout_marginStart="10dp"
        android:id="@+id/compass"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            tools:text="만현마을 쌍용 1차 701 601호 뉴나리"
            app:layout_constraintStart_toEndOf="@id/compass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:includeFontPadding="false"
            android:textColor="@color/moaBlack"
            android:lines="1"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textSize="14dp"
            android:ellipsize="end"
            android:id="@+id/UserAptName"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.viewpager2.widget.ViewPager2
    android:layout_width="0dp"
    android:layout_height="250dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/userAddressLayout"
    android:id="@+id/homeViewPager"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/indicators"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeViewPager"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_moa_voice"
            android:layout_marginEnd="15dp"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/homeTalentSharingBnt"
            app:layout_constraintTop_toBottomOf="@id/indicators"
            app:layout_constraintDimensionRatio="H,1:1"
            android:id="@+id/homeMoaVoiceChatBtn"
           />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_talent_sharing"
            android:layout_marginEnd="15dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@id/homeMoaVoiceChatBtn"
            app:layout_constraintEnd_toStartOf="@id/homeGroupBuyingBtn"
            app:layout_constraintTop_toBottomOf="@id/indicators"
            app:layout_constraintDimensionRatio="H,1:1"
            android:layout_marginTop="10dp"
            android:id="@+id/homeTalentSharingBnt"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_group_purchase"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toEndOf="@id/homeTalentSharingBnt"
            app:layout_constraintTop_toBottomOf="@id/indicators"
            android:layout_marginTop="10dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toStartOf="@id/homeClaimBtn"
            android:id="@+id/homeGroupBuyingBtn"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_home_claim"
            app:layout_constraintStart_toEndOf="@id/homeGroupBuyingBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/indicators"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/homeClaimBtn"
            app:layout_constraintDimensionRatio="H,1:1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/homeMoaVoiceChatBtn"
            app:layout_constraintEnd_toEndOf="@id/homeMoaVoiceChatBtn"
            app:layout_constraintTop_toBottomOf="@id/homeMoaVoiceChatBtn"
            android:text="모아 라디오"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/moaBlack"
            android:lineSpacingExtra="6dp"
            android:id="@+id/homeVoiceChatText"
            />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/homeTalentSharingBnt"
        app:layout_constraintEnd_toEndOf="@id/homeTalentSharingBnt"
        app:layout_constraintTop_toBottomOf="@id/homeTalentSharingBnt"
        android:text="재능 공유"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="@color/moaBlack"
        android:lineSpacingExtra="6dp"
        android:id="@+id/hometalentSharingText"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/homeGroupBuyingBtn"
        app:layout_constraintEnd_toEndOf="@id/homeGroupBuyingBtn"
        app:layout_constraintTop_toBottomOf="@id/homeGroupBuyingBtn"
        android:text="공동구매"
        android:textSize="14dp"
        android:gravity="center"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:textColor="@color/moaBlack"
        android:lineSpacingExtra="6dp"
        android:id="@+id/homeGroupBuyingText"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="민원 신청"
        android:fontFamily="@font/notosanscjkkr_medium"
        app:layout_constraintStart_toStartOf="@id/homeClaimBtn"
        app:layout_constraintEnd_toEndOf="@id/homeClaimBtn"
        app:layout_constraintTop_toBottomOf="@id/homeClaimBtn"
        android:gravity="center"
        android:textColor="@color/moaBlack"
        android:textSize="14dp"
        android:id="@+id/homeHandPurchaseText"/>


<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/homeHandPurchaseText"
    android:layout_marginTop="15dp"
    android:text="모아 매거진"
    android:fontFamily="@font/notosanscjkkr_medium"
    android:layout_marginStart="15dp"
    android:textColor="@color/moaBlack"
    android:textSize="18dp"
    android:textStyle="bold"
    android:lineSpacingExtra="9.5dp"
    android:id="@+id/homeMoaMegazinText"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeMoaMegazinText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/homeMegazinRcv"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>