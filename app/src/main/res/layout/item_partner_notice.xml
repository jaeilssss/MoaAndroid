<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/shape_grey_radius_15">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/img_paper"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/itemPartnerNoticeImg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/itemPartnerNoticeImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/itemPartnerNoticeImg"
            app:layout_constraintBottom_toTopOf="@id/itemPartnerNoticeCategory"
            tools:text="2021.4월 잡수입 발생 및 지출 내역"
            android:textSize="16dp"
            android:textColor="@color/moaBlack"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:padding="2dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:id="@+id/itemPartnerNoticeTitle"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/itemPartnerNoticeTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemPartnerNoticeTitle"
            app:layout_constraintBottom_toTopOf="@id/itemPartnerNoticeWriter"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="세입/세출 결산"
            android:padding="2dp"
            android:id="@+id/itemPartnerNoticeCategory"
            android:textColor="@color/moaBlack"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/itemPartnerNoticeCategory"
            app:layout_constraintTop_toBottomOf="@id/itemPartnerNoticeCategory"
            app:layout_constraintBottom_toBottomOf="@id/itemPartnerNoticeImg"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="관리사무소"
            android:id="@+id/itemPartnerNoticeWriter"
            android:textSize="14dp"
            android:textColor="@color/moaBlack"
            android:padding="2dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>