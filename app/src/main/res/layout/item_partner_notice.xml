<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:id="@+id/itemPartnerNoticeLayout"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_grey_radius_15">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:text="중요"
          android:background="@drawable/shape_main_color_radius_5"
          android:textSize="15dp"
          android:textColor="@color/moaBlack"
          android:paddingHorizontal="10dp"
          android:paddingVertical="3dp"
          android:fontFamily="@font/notosanscjkkr_medium"
          android:includeFontPadding="false"
          android:visibility="gone"
          android:id="@+id/itemPartnerNoticePriority"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/itemPartnerNoticePriority"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/itemPartnerNoticeWriter"
            tools:text="ㅎㅇㅎㅇㅎㅇㅎㅇ"
            android:textSize="17dp"
            android:textColor="@color/moaBlack"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:id="@+id/itemPartnerNoticeTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/itemPartnerNoticeTitle"
            app:layout_constraintTop_toBottomOf="@id/itemPartnerNoticeTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="관리사무소"
            android:textSize="14dp"
            android:id="@+id/itemPartnerNoticeWriter"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>