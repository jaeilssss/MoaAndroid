<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".ui.voice.VoiceRoomMakeFragment">
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.voice.VoiceRoomMakeViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back"
        android:layout_width="9.8dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_back"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모아 방송 만들기"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:textColor="@color/moaBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        android:id="@+id/userInfoTextView"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="대화 제목을 입력하세요"
        android:fontFamily="@font/notosanscjkkr_medium"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:textColor="@color/moaBlack"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:layout_marginTop="30dp"
        android:id="@+id/VoiceRoomMakeTitleText"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomMakeTitleText"
        android:background="@drawable/shape_grey_radius_15"
        android:minHeight="158dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="내용을 입력해주세요"
        android:text="@={model.title}"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="top"
        android:textSize="16sp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:id="@+id/VoiceRoomMakeTitleEdit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomMakeTitleEdit"
        android:text="대표 이미지를 선택해주세요"
        android:textColor="@color/moaBlack"
        android:textSize="18sp"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/VoiceRoomMakeImgText"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomMakeImgText"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_grey_radius_10"
        android:id="@+id/VoiceRoomGoToAlbum"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintBottom_toBottomOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintStart_toStartOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintEnd_toEndOf="@id/VoiceRoomGoToAlbum"
        android:background="@drawable/shape_shape_oval_grey"
        android:src="@drawable/ic_plus"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanscjkkr_medium"
        app:layout_constraintStart_toStartOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintEnd_toEndOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintBottom_toBottomOf="@id/VoiceRoomGoToAlbum"
        android:text="1/1"
        android:layout_marginBottom="5dp"
        android:id="@+id/VoiceRoomImageCount"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomMakeImgText"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_radius_10"
        android:id="@+id/VoiceRoomInsertImage"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomImageCount"
        android:text="공개 범위를 선택하세요"
        android:textSize="18sp"
        android:id="@+id/VoiceRoomAroundText"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textColor="@color/moaBlack"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintDimensionRatio="H,1:1"
    android:background="#ffffbfbf"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/VoiceRoomAroundMyApt"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintEnd_toStartOf="@id/VoiceRoomAroundNb"
    app:layout_constraintTop_toBottomOf="@id/VoiceRoomAroundText">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:id="@+id/VoiceRoomAroundMyAptText"
        android:text="우리아파트만"/>
</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:background="@color/mainColor"
        android:id="@+id/VoiceRoomAroundNb"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/VoiceRoomAroundMyApt"
        app:layout_constraintEnd_toStartOf="@id/VoiceRoomAll"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomAroundText">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/notosanscjkkr_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:includeFontPadding="false"
            android:id="@+id/VoiceRoomAroundNbText"
            android:text="인근아파트까지"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:background="#bdbdbd"
        android:id="@+id/VoiceRoomAll"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toEndOf="@id/VoiceRoomAroundNb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomAroundText">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/notosanscjkkr_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:includeFontPadding="false"
            android:id="@+id/VoiceRoomAllText"
            android:text="전국"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomAll"
        android:text="대화 주제를 선택해주세요"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/VoiceRoomThemeText"
        android:textSize="18sp"/>

<!--    리사이클러뷰 나중에 수정해보자-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomThemeText"
        android:id="@+id/VoiceRoomMakeRcv"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomMakeRcv"
        android:background="@drawable/shape_unable_radius_15"
        android:text="완료"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textSize="18sp"
        android:clickable="false"
        android:id="@+id/VoiceRoomMakeSubmit"
        android:layout_marginBottom="10dp"
        />
<View
    android:layout_width="0dp"
    android:layout_height="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/VoiceRoomMakeSubmit"/>
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>