<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".ui.voice.VoiceRoomMakeFragment">
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.voice.VoiceRoomMakeViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back"
        android:layout_width="9.8dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_back"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모아 방송 만들기"
        android:textColor="@color/moaBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        android:id="@+id/userInfoTextView"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="대표 이미지를 선택해주세요"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:textColor="@color/moaBlack"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:layout_marginTop="30dp"
        android:id="@+id/VoiceRoomMakeImgText"/>
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomMakeImgText"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_grey_radius_10"
        android:id="@+id/VoiceRoomGoToAlbum"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintBottom_toBottomOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintStart_toStartOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintEnd_toEndOf="@id/VoiceRoomGoToAlbum"
        android:background="@drawable/shape_shape_oval_grey"
        android:src="@drawable/ic_plus"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintEnd_toEndOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintBottom_toBottomOf="@id/VoiceRoomGoToAlbum"
        android:text="1/1"
        android:layout_marginBottom="5dp"
        android:id="@+id/VoiceRoomImageCount"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/VoiceRoomGoToAlbum"
        app:layout_constraintTop_toBottomOf="@id/VoiceRoomMakeImgText"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_radius_10"
        android:id="@+id/VoiceRoomInsertImage"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</layout>