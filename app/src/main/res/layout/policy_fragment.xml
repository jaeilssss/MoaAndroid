<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.signup.PolicyViewModel" />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.PolicyFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약관동의"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/moaBlack"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:textStyle="bold"
        android:id="@+id/policyTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="99dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/policyTextView"
        android:layout_marginTop="70dp"
        android:background="@drawable/img_moa_text_logo"
        android:id="@+id/policyImageView"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/policyCheckBoxLayout"
        android:background="@drawable/login_edit_text_radius_15"
        app:layout_constraintTop_toBottomOf="@id/policyImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:checked="@={model.checkBoxFirst}"
            android:onClick="@{()->model.checkBoxFirst()}"
            android:button="@drawable/selector_signup_policy_checkbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/policyAllAgreeCheck"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="모두 확인, 동의합니다"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:layout_marginTop="10dp"
            app:layout_constraintBaseline_toBaselineOf="@id/policyAllAgreeCheck"
            app:layout_constraintStart_toEndOf="@id/policyAllAgreeCheck"
            android:lineSpacingExtra="6.5dp"
            android:textColor="@color/moaBlack"/>
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/policyAllAgreeCheck"
            android:background="#dedede"
            android:layout_marginTop="5dp"
            android:id="@+id/view"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:checked="@={model.checkBoxSecond}"
            android:onClick="@{()->model.checkBoxCheck()}"
            android:button="@drawable/selector_signup_policy_checkbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view"
            android:id="@+id/servicePolicyCheck"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="서비스 이용약관 (필수)"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:lineSpacingExtra="6.5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/PolicyServieText"
            app:layout_constraintBaseline_toBaselineOf="@id/servicePolicyCheck"
            app:layout_constraintStart_toEndOf="@id/servicePolicyCheck"
            android:textColor="@color/moaBlack"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleX="0.8"
            android:onClick="@{()->model.checkBoxCheck()}"
            android:button="@drawable/selector_signup_policy_checkbox"
            android:scaleY="0.8"
            android:checked="@={model.checkBoxThird}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/servicePolicyCheck"
            android:id="@+id/personalPolicyCheck"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:id="@+id/PolicyPolicyText"
            android:text="개인정보 취급방침 (필수)"
            android:lineSpacingExtra="6.5dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:layout_marginTop="20dp"
            app:layout_constraintBaseline_toBaselineOf="@id/personalPolicyCheck"
            app:layout_constraintStart_toEndOf="@id/personalPolicyCheck"
            android:textColor="@color/moaBlack"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleX="0.8"
            android:button="@drawable/selector_signup_policy_checkbox"
            android:scaleY="0.8"
            android:checked="@={model.checkBoxFourth}"
            android:onClick="@{()->model.checkBoxCheck()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personalPolicyCheck"
            android:id="@+id/maketingPolicyCheck"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:lineSpacingExtra="6.5dp"
            android:text="마케팅 수신동의 (선택)"
            android:id="@+id/policyMarketingText"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:layout_marginTop="20dp"
            app:layout_constraintBaseline_toBaselineOf="@id/maketingPolicyCheck"
            app:layout_constraintStart_toEndOf="@id/maketingPolicyCheck"
            android:textColor="@color/moaBlack"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
<androidx.appcompat.widget.AppCompatButton
    android:layout_width="330dp"
    android:layout_height="55dp"
    android:background="@drawable/button_shape_main_color"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/policyCheckBoxLayout"
    android:layout_marginTop="30dp"
    android:text="다음"
    android:textSize="18dp"
    android:id="@+id/nextBtn"
    android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>