<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.moa.moakotlin.ui.concierge.needer.NeederReadViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_weight = "1"
    android:layout_width="match_parent">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/moa_temp_back"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옵션"
        android:background="@android:drawable/ic_menu_sort_by_size"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000000"
        android:id="@+id/kid_read_option"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/kid_read_view_pager"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabGravity="center"
        app:tabBackground="@drawable/dot_indicator"
        android:id="@+id/kid_read_tab_layout"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorGravity="center"
        app:layout_constraintBottom_toBottomOf="@id/kid_read_view_pager"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="돌봄대상"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/type_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kid_read_view_pager"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            tools:text="유아"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/kid_read_view_pager"
            app:layout_constraintStart_toEndOf="@id/type_txt"
            android:id="@+id/kid_type"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채용중"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/kid_read_hire_state"
        app:layout_constraintTop_toBottomOf="@id/kid_read_view_pager"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/kid_type"
        app:layout_constraintTop_toBottomOf="@id/kid_read_view_pager"
        tools:text="1명"
        android:textColor="#000000"
        android:id="@id/kid_count"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="희망날짜(시작날짜)"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/date_txt"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_txt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/date_txt"
        app:layout_constraintTop_toBottomOf="@id/kid_type"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        tools:text="2021년 1월 22일"
        android:id="@+id/kid_hope_date"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kid_count"
        android:text="정기돌봄"
        android:visibility="gone"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/kid_is_regular"/>
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kid_hope_date"
        android:layout_marginTop="15dp"
        android:background="#bdbdbd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kid_count"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:id="@+id/content_txt"
        android:text="신청내용"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:id="@+id/kid_read_content"
        tools:text="@string/kidPolicy"/>

</androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="#ff7f00"
                android:id="@+id/kid_read_chat_layout"
                android:layout_height="80dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:text="희망시급"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/kid_read_hope_wage_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="협의가능"
                    app:layout_constraintStart_toEndOf="@id/kid_read_hope_wage_text"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:id="@+id/kid_read_wage_nego"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/kid_read_wage"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="10000원"
                    app:layout_constraintTop_toBottomOf="@id/kid_read_hope_wage_text"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="25dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이웃과 채팅하기"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#ff7f00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/kid_read_chatting_btn"
            android:background="@drawable/sign_up_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
