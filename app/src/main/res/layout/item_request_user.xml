<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:background="@drawable/profile_woman"
    android:id="@+id/itemRequestUserProfile"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="뉴나리"
        android:textSize="14dp"
        android:textColor="#777777"
        android:lines="1"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanscjkkr_medium"
        app:layout_constraintStart_toEndOf="@id/itemRequestUserProfile"
        app:layout_constraintTop_toTopOf="@id/itemRequestUserProfile"
        app:layout_constraintBottom_toBottomOf="@id/itemRequestUserProfile"
        android:layout_marginStart="10dp"
        android:id="@+id/itemRequestUserNickName"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:background="@drawable/shape_radius_15_border_black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/itemRequestUserProfile"
        app:layout_constraintBottom_toBottomOf="@id/itemRequestUserProfile"
        android:text="발언권 부여"
        android:textColor="@color/moaBlack"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:id="@+id/itemRequestUserBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>